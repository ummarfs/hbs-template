            </div>
          </form>
        </div>
      </section>
      {{/unless}}
      {{/if}}

    </main>

    <footer class="bg-[var(--primary)] text-[var(--text-on-primary)]">
      <div class="max-w-screen-lg mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-10">
        <div class="text-center md:text-left">
        <h3 class="text-3xl sm:text-4xl font-secondary font-bold mb-4">{{personal_info.value.firstName}} {{personal_info.value.lastName}}</h3>
        {{#if contacts.value.contacts}}
          {{#unless contacts.meta.hide}}
