        style="background-image: url('{{default contacts.value.contacts.bgImage 'https://images.unsplash.com/photo-1541888946425-d81bb19240f5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80'}}');">
        <div class="absolute inset-0 bg-black opacity-40"></div>
      </section>
      {{/unless}}
      {{/if}}

      {{#if contacts.value.contacts.contactForm}}
      {{#unless contacts.meta.hide}}
      <section class="py-16 md:py-20 bg-[var(--secondary)] section-wrapper" id="contact" data-edit-section="contacts" data-section="contacts" data-title="Contact Form">
        <div class="max-w-screen-md mx-auto px-4 sm:px-6 lg:px-8 text-center" data-aos="fade-up">
