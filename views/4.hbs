        <a href="{{contacts.value.contacts.bookingUrl}}"
        target="_blank"
          class="inline-block text-base font-primary px-6 py-2 rounded-full border border-white hover:bg-white hover:text-[var(--primary)] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[var(--primary)] focus:ring-white">
         {{#if contacts.value.contacts.buttonText}}
            {{contacts.value.contacts.buttonText}} {{else}} Schedule a Discovery Call {{/if}} 
        </a>
        {{else}}
         <a href="#contact"
          class="inline-block text-base font-primary px-6 py-2 rounded-full border border-white hover:bg-white hover:text-[var(--primary)] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[var(--primary)] focus:ring-white">
         {{#if contacts.value.contacts.buttonText}}
            {{contacts.value.contacts.buttonText}} {{else}} Schedule a Discovery Call {{/if}} 
        </a>
        {{/if}}
          {{/unless}}
          {{/if}}
        </div>
        <div class="text-center md:text-left text-sm font-primary space-y-2">
        {{#if personal_info.value.phone}}
        <p>{{personal_info.value.phone}}</p>
        {{/if}}
        {{#if personal_info.value.email}}
        <p><a href="mailto:{{personal_info.value.email}}"
          class="hover:underline focus:outline-none focus:ring-2 focus:ring-white rounded-sm">{{personal_info.value.email}}</a>
        </p>
        {{/if}}
        {{#if personal_info.value.addressText}}
        <p>{{personal_info.value.addressText}}</p>
        {{/if}}
        </div>
      </div>
      {{#if social.value.social.items}}
      {{#unless social.meta.hide}}
      <div class="mt-8 flex justify-center space-x-6 section-wrapper" data-edit-section="social" data-section="social" data-title="Social Links">
        {{#each social.value.social.items}}
         <a href="{{this.url}}" aria-label="{{this.label}}" class="hover:text-[var(--accent)] transition-colors">
                {{{socialIcon url=this.url
                label=this.label size=40 className="size-12" }}}
              </a>
        {{/each}}
      </div>
      {{/unless}}
      {{/if}}
      <div
        class="mt-8 pt-8 border-t border-slate-600 text-center text-sm font-primary space-y-2 md:space-y-0 md:flex md:justify-center md:space-x-4">
        <p>© {{currentYear}} {{personal_info.value.firstName}} {{personal_info.value.lastName}}. All Rights
        Reserved.</p>
      </div>
      </div>
    </footer></svg>
  </div>

  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>


  <script>
    AOS.init({
      duration: 800,
      once: true,
    });

    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    const faqQuestions = document.querySelectorAll('.faq-question');
    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const icon = question.querySelector('.faq-icon');

        if (answer.style.maxHeight) {
          answer.style.maxHeight = null;
          icon.classList.remove('rotate-180');
        } else {
          answer.style.maxHeight = answer.scrollHeight + 'px';
          icon.classList.add('rotate-180');
        }
      });
    });
  </script>
