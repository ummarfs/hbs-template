<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>John Doe | Business Consultant</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {{#if fontPicker.value.fontPicker.primary}}
  <link
    href="{{fontPicker.value.fontPicker.primary.url}}"
    rel="stylesheet">
    {{else}}
  <link
    href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap"
    rel="stylesheet">
    {{/if}}
    {{#if fontPicker.value.fontPicker.secondary}}
    <link
    href="{{fontPicker.value.fontPicker.secondary.url}}"
    rel="stylesheet">
    {{else}}
    <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap"
    rel="stylesheet">
    {{/if}}
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

  <style>
    :root {
      --primary: {{default colorPalette.value.colorPalette.primary '#1e293b'}};
      --secondary: {{default colorPalette.value.colorPalette.secondary '#f3f4f6'}};
      --accent: {{default colorPalette.value.colorPalette.accent '#ea580c'}};
      --text-on-primary: {{default colorPalette.value.colorPalette.textOnPrimary '#ffffff'}};
      --text-on-secondary: {{default colorPalette.value.colorPalette.textOnSecondary '#1e293b'}};
      --text-subtle: {{default colorPalette.value.colorPalette.textSubtle '#4b5563'}};
      --font-primary: {{default fontPicker.value.fontPicker.primary.family 'Lato'}};
      --font-secondary: {{default fontPicker.value.fontPicker.secondary.family 'Montserrat'}};
    }

    body {
      font-family: var(--font-primary);
      color: var(--text-on-secondary);
      overflow-x: hidden;
    }

    .font-primary {
      font-family: var(--font-primary);
    }

    .font-secondary {
      font-family: var(--font-secondary);
    }
  </style>
</head>

<body>
  <div class="relative w-full">
    <header class="sticky top-0 z-50 bg-white shadow-md">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <div class="flex-shrink-0">
            <a href="#"
              class="flex items-center space-x-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]"
              aria-label="{{personal_info.value.firstName}} {{personal_info.value.lastName}}">
              <span class="text-xl font-secondary font-semibold text-[var(--primary)]">
                {{personal_info.value.firstName}} {{personal_info.value.lastName}}
                {{#if personal_info.value.role}}
                <span class="hidden sm:inline"> | {{personal_info.value.role}}</span>
                {{/if}}
              </span>
            </a>
          </div>

          <nav class="hidden lg:flex lg:space-x-4">
            {{#if about.value.about.content}}
            {{#unless about.meta.hide}}
            <a href="#about"
              class="text-base text-[var(--text-on-secondary)] hover:text-[var(--accent)] px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default about.value.about.navbarName 'About Me'}}</a>
            {{/unless}}
            {{/if}}
            {{#if services.value.services.items}}
            {{#unless services.meta.hide}}
            <a href="#services"
              class="text-base text-[var(--text-on-secondary)] hover:text-[var(--accent)] px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default services.value.services.navbarName 'Services'}}</a>
            {{/unless}} 
            {{/if}}
            {{#if caseStudy.value.caseStudy.items}}
            {{#unless caseStudy.meta.hide}}
            <a href="#casestudy"
              class="text-base text-[var(--text-on-secondary)] hover:text-[var(--accent)] px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default caseStudy.value.caseStudy.navbarName 'Case Studies'}}</a>
            {{/unless}}
            {{/if}}
            {{#if packages.value.packages.items}}
            {{#unless packages.meta.hide}}
            <a href="#packages"
              class="text-base text-[var(--text-on-secondary)] hover:text-[var(--accent)] px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default packages.value.packages.navbarName 'Packages'}}</a>
            {{/unless}}
            {{/if}}
            {{#if contacts.value.contacts.contactForm}}
            {{#unless contacts.meta.hide}}
            <a href="#contact"
              class="text-base text-[var(--text-on-secondary)] hover:text-[var(--accent)] px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default contacts.value.contacts.navbarName 'Contact'}}</a>
            {{/unless}}
            {{/if}}
          </nav>

          <div class="lg:hidden">
            <button id="menu-btn" type="button"
              class="text-[var(--primary)] hover:text-[var(--accent)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)] p-1 rounded-md"
              aria-label="Open main menu">
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <div id="mobile-menu" class="lg:hidden hidden">
        <nav class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white">
          {{#if about.value.about.content}}
            {{#unless about.meta.hide}}
          <a href="#about"
            class="block text-base text-[var(--primary)] hover:bg-gray-100 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--accent)]">{{default about.value.about.navbarName 'About Me'}}</a>
             {{/unless}}
            {{/if}}
            {{#if services.value.services.items}}
            {{#unless services.meta.hide}}
          <a href="#services"
            class="block text-base text-[var(--primary)] hover:bg-gray-100 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--accent)]">{{default services.value.services.navbarName 'Services'}}</a>
            {{/unless}} 
            {{/if}}
            {{#if caseStudy.value.caseStudy.items}}
            {{#unless caseStudy.meta.hide}}
          <a href="#casestudy"
            class="block text-base text-[var(--primary)] hover:bg-gray-100 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--accent)]">{{default caseStudy.value.caseStudy.navbarName 'Case Studies'}}</a>
            {{/unless}}
            {{/if}}
            {{#if packages.value.packages.items}}
            {{#unless packages.meta.hide}}
          <a href="#packages"
            class="block text-base text-[var(--primary)] hover:bg-gray-100 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--accent)]">{{default packages.value.packages.navbarName 'Packages'}}</a>
             {{/unless}}
            {{/if}}
            {{#if contacts.value.contacts.contactForm}}
            {{#unless contacts.meta.hide}}
          <a href="#contact"
            class="block text-base text-[var(--primary)] hover:bg-gray-100 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--accent)]">{{default contacts.value.contacts.navbarName 'Contact'}}</a>
            {{/unless}}
            {{/if}}
        </nav>
      </div>
    </header>

    <main>
      <section class="relative w-full h-[700px] sm:h-[780px] section-wrapper" data-edit-section="personal_info" data-section="personal_info"
        data-title="Personal Info">
        <img
          src="{{default personal_info.value.coverImage 'https://images.unsplash.com/photo-1497215728101-856f4ea42174?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80'}}"
          alt="Modern business office interior" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black/40"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="relative w-11/12 max-w-screen-lg p-6 sm:p-8 md:p-16 backdrop-blur-sm bg-gray-500/20 text-[var(--text-on-primary)]"
            data-aos="fade-up">
            <h1
              class="text-4xl sm:text-6xl md:text-8xl lg:text-[95px] font-secondary font-bold tracking-tight leading-tight">
              {{default personal_info.value.headline 'Your Partner in Growth & Strategy'}}
            </h1>
            <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-secondary tracking-tight leading-snug mt-6">
              {{default personal_info.value.position 'Strategic insights and actionable roadmaps to scale your operations and maximize profitability.'}}
            </h2>
             {{#if contacts.value.contacts}}
                {{#unless contacts.meta.hide}}
                {{#if contacts.value.contacts.bookingUrl}}
            <a href="{{contacts.value.contacts.bookingUrl}}" target="_blank" aria-label="Book a Free Consultation"
              class="inline-block mt-8 bg-white text-[var(--text-on-secondary)] text-lg sm:text-xl font-primary px-8 py-4 rounded-full border border-solid border-black hover:bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{#if contacts.value.contacts.buttonText}}
                  {{contacts.value.contacts.buttonText}} {{else}} Book
                  a Free Consultation {{/if}}</a>
                  {{else}}
                  <a href="#contact" aria-label="Book a Free Consultation"
              class="inline-block mt-8 bg-white text-[var(--text-on-secondary)] text-lg sm:text-xl font-primary px-8 py-4 rounded-full border border-solid border-black hover:bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{#if contacts.value.contacts.buttonText}}
                  {{contacts.value.contacts.buttonText}} {{else}} Book
                  a Free Consultation {{/if}}</a>
                   {{/if}}
                {{/unless}}
                {{/if}}
          </div>
        </div>
      </section>

     {{#splitText about.value.about.content}}
      {{#unless about.meta.hide}}
      <section class="py-16 md:py-20 bg-white section-wrapper" id="about" data-edit-section="about" data-section="about" data-title="About">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12 md:mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight">
              {{default about.value.about.section_title 'About Me'}}</h2>
            <p class="mt-4 text-lg md:text-xl lg:text-[24px] font-secondary tracking-tight leading-snug max-w-4xl mx-auto">
              {{firstHalf}}
            </p>
          </div>
          <div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-16">
            <div class="w-full lg:w-1/3" data-aos="fade-right">
              <img
                src="{{default about.value.about.image 'https://c.animaapp.com/mfnpsvda9pPWxp/assets/88aac0_70dba72adce54eea9f53068b36a9e0e9~mv2.jpeg'}}"
                alt="Portrait of a confident business consultant"
                class="w-full h-auto object-cover rounded-lg shadow-lg" />
            </div>
            <div class="w-full lg:w-2/3" data-aos="fade-left">
              <p class="text-base sm:text-lg lg:text-xl font-primary leading-relaxed">
                {{secondHalf}}
              </p>
            </div>
          </div>
        </div>
      </section>
       {{/unless}}
      {{/splitText}}

     {{#if services.value.services.items}}
      {{#unless services.meta.hide}}
      <section class="py-16 md:py-20 bg-[var(--primary)] text-[var(--text-on-primary)] section-wrapper" id="services" data-edit-section="services" data-section="services" data-title="Services">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <div data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight">
              {{default services.value.services.section_title
            'How I Can Help'}}
            </h2>
            {{#if services.value.services.description}}
            <p
              class="mt-4 text-lg md:text-xl lg:text-[24px] font-secondary tracking-tight leading-snug max-w-4xl mx-auto">
              {{services.value.services.description}}
            </p>
            {{/if}}
          </div>
          <div class="mt-12 md:mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each services.value.services.items}}
            <div class="bg-[var(--secondary)] rounded-xl p-8 text-left text-[var(--text-on-secondary)]"
              data-aos="fade-up" data-aos-delay="100">
              <h3 class="text-2xl font-secondary font-bold leading-7 mb-2">{{this.title}}</h3>
              <p class="text-base sm:text-lg font-primary leading-snug">
                {{this.description}}
              </p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
       {{/unless}}
      {{/if}}

      {{#if process.value.process.items}}
      {{#unless process.meta.hide}}
      <section class="py-16 md:py-20 bg-white section-wrapper" id="process" data-edit-section="process" data-section="process" data-title="Process">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <div data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight mb-4">
              {{default process.value.process.section_title 'My Proven Process'}}
            </h2>
            {{#if process.value.process.description}}
            <p
              class="mt-4 text-lg md:text-xl lg:text-[24px] font-secondary tracking-tight leading-snug max-w-3xl mx-auto mb-12 md:mb-16">
              {{process.value.process.description}}
            </p>
            {{/if}}
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 text-left">
            {{#each process.value.process.items}}
            <div class="border-t-4 border-[var(--primary)] pt-6" data-aos="fade-up" data-aos-delay="100">
              <p class="text-5xl font-secondary font-extrabold text-gray-200 mb-4">{{inc @index}}</p>
              <h3 class="text-xl sm:text-2xl font-secondary font-bold mb-2">{{this.title}}</h3>
              <p class="font-primary">{{this.description}}</p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
        {{/unless}}
        {{/if}}
      
      {{#if stats.value.stats.items}}
      {{#unless stats.meta.hide}}
      <section class="py-16 md:py-20 bg-[var(--secondary)] section-wrapper" data-edit-section="stats" data-section="stats" data-title="Stats">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight"
            data-aos="fade-up">{{default stats.value.stats.section_title
            'Proven Results'}}</h2>
          <div class="mt-12 md:mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
             {{#each stats.value.stats.items}}
            <div
              class="bg-[var(--primary)] text-[var(--text-on-primary)] rounded-xl p-8 flex flex-col justify-center items-center min-h-[280px]"
              data-aos="zoom-in" data-aos-delay="100">
              <p class="text-6xl md:text-7xl lg:text-8xl font-secondary font-extrabold">{{this.number}}</p>
              <p class="mt-4 text-lg sm:text-xl font-primary">{{this.label}}</p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
        {{/unless}}
        {{/if}}

       {{#if testimonials.value.testimonials.items}}
      {{#unless testimonials.meta.hide}}
      <section class="py-16 md:py-20 bg-white section-wrapper" id="testimonials" data-edit-section="testimonials" data-section="testimonials" data-title="Testimonials">
        <div class="max-w-screen-md mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2
            class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight mb-12 md:mb-16"
            data-aos="fade-up">
            {{default
              testimonials.value.testimonials.heading 'What My Clients Say'}}
          </h2>
          <div class="space-y-12">
            {{#each testimonials.value.testimonials.items}}
            <blockquote class="text-left" data-aos="fade-up">
              <p class="text-lg sm:text-xl lg:text-2xl font-secondary leading-snug">
                "{{this.recommendationText}}"
              </p>
              <footer class="mt-6">
                <p class="text-lg font-secondary font-bold text-[var(--primary)]">{{this.recommenderName}}</p>
                <p class="font-primary text-[var(--text-subtle)]">{{this.designation}}</p>
              </footer>
            </blockquote>
            {{/each}}
          </div>
        </div>
      </section>
        {{/unless}}
        {{/if}}

      {{#if caseStudy.value.caseStudy.items}}
      {{#unless caseStudy.meta.hide}}
      <section class="py-16 md:py-20 bg-[var(--secondary)] section-wrapper" id="casestudy" data-edit-section="caseStudy" data-section="caseStudy" data-title="Case Studies">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12 md:mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight">{{default caseStudy.value.caseStudy.section_title 'In-Depth Case Studies'}}</h2>
            {{#if caseStudy.value.caseStudy.description}}
            <p
              class="mt-4 text-lg md:text-xl lg:text-[24px] font-secondary tracking-tight leading-snug max-w-3xl mx-auto">
              {{caseStudy.value.caseStudy.description}}
            </p>
            {{/if}}
          </div>
          <div class="space-y-16 md:space-y-20">
            {{#each caseStudy.value.caseStudy.items}}
            <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-center">
              <div class="order-2 md:order-1" data-aos="fade-right">
                <h3 class="text-3xl font-secondary font-bold text-[var(--primary)]">Client: {{this.client}}</h3>
                <p class="mt-4 text-lg sm:text-xl font-primary text-[var(--text-subtle)]">{{this.title}}
                </p>
                <div class="mt-6 space-y-4">
                  <div>
                    <h4 class="text-lg sm:text-xl font-secondary font-bold">The Challenge</h4>
                    <p class="mt-1 font-primary">{{this.challenge}}</p>
                  </div>
                  <div>
                    <h4 class="text-lg sm:text-xl font-secondary font-bold">My Solution</h4>
                    <p class="mt-1 font-primary">{{this.solution}}</p>
                  </div>
                  <div>
                    <h4 class="text-lg sm:text-xl font-secondary font-bold">The Result</h4>
                    {{#each this.results}}
                    <div class="mt-2 bg-white p-4 rounded-lg shadow">
                      <p class="text-3xl sm:text-4xl font-secondary font-extrabold text-[var(--primary)]">{{this.title}}</p>
                      <p class="font-primary text-[var(--text-subtle)]">{{this.description}}</p>
                    </div>
                    {{/each}}
                  </div>
                </div>
              </div>
              <div class="order-1 md:order-2" data-aos="fade-left">
                <img
                  src="{{default this.image 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80'}}"
                  alt="Business analytics chart" class="rounded-lg shadow-lg w-full h-auto object-cover">
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
        {{/unless}}
        {{/if}}
  
      {{#if packages.value.packages.items}}
      {{#unless packages.meta.hide}}
      <section class="py-16 md:py-20 bg-white section-wrapper" id="packages" data-edit-section="packages" data-section="packages" data-title="Packages">
        <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12 md:mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight">{{default packages.value.packages.section_title 'Service Packages'}}</h2>
            {{#if packages.value.packages.description}}
            <p
              class="mt-4 text-lg md:text-xl lg:text-[24px] font-secondary tracking-tight leading-snug max-w-3xl mx-auto">
              {{packages.value.packages.description}}
            </p>
            {{/if}}
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each packages.value.packages.items}}
            <div class="border border-gray-200 rounded-lg p-6 sm:p-8 text-center shadow-lg flex flex-col"
              data-aos="fade-up" data-aos-delay="100">
              {{#if this.badge}}
               <span class="mb-4 inline-block bg-[var(--primary)] text-[var(--text-on-primary)] text-sm font-bold px-3 py-1 rounded-full">
                {{this.badge}}
               </span>
               {{/if}}
              <h3 class="text-2xl font-secondary font-bold">{{this.title}}</h3>
              {{#if this.description}}
              <p class="mt-2 font-primary text-[var(--text-subtle)] flex-grow">{{this.description}}</p>
              {{/if}}
              <ul class="mt-6 space-y-2 text-left font-primary flex-grow">
                {{#each this.features}}
                <li class="flex items-center"><svg class="w-5 h-5 text-[var(--accent)] mr-2 flex-shrink-0" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>{{this}}</li>
                {{/each}}
              </ul>
              <a href="#contact"
                class="mt-8 bg-[var(--primary)] text-[var(--text-on-primary)] text-lg font-primary px-8 py-3 rounded-full hover:bg-[var(--accent)] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent)]">{{default this.buttonText 'Book a Session'}}</a>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
        {{/unless}}
        {{/if}}
      
       {{#if faq.value.faq.items}}
    {{#unless faq.meta.hide}}
      <section class="py-16 md:py-20 bg-[var(--secondary)] section-wrapper" id="faq" data-edit-section="faq" data-section="faq" data-title="FAQ">
        <div class="max-w-screen-md mx-auto px-4 sm:px-6 lg:px-8" data-aos="fade-up">
          <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl lg:text-[65px] font-secondary font-bold tracking-tight leading-tight">
              {{default faq.value.faq.section_title 'Frequently Asked Questions'}}</h2>
          </div>
          <div class="space-y-4">
            {{#each faq.value.faq.items}}
            <div class="border-b border-[var(--text-subtle)]/50 pb-4">
              <button
                class="faq-question flex justify-between items-center w-full text-left p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent)]">
