<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>M. Caldwell - Business Growth Consultant</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Questrial:wght@400&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

  <style>
    body,
    .font-questrial {
      font-family: 'Questrial', sans-serif;
    }
     #about,
  #offerings,
  #casestudies,
  #faq,
  #contact {
    /* Adjust 100px to be slightly more than your header's total height */
    scroll-margin-top: 100px !important;
  }
  </style>
</head>

<body>
  <div class="font-questrial" style="background-color: {{default colorPalette.value.colorPalette.tertiary '#f3f4f6'}};">
    <header class="shadow-sm py-2"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 lg:h-20">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 rounded-full flex items-center justify-center"
              style="background-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              <span class="font-bold text-sm"
                style="color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}};">{{firstChar
                personal_info.value.firstName}}</span>
            </div>
            <h1 class="text-xl lg:text-2xl font-bold"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{personal_info.value.firstName}}

              {{#if personal_info.value.role}} | {{personal_info.value.role}}
              {{/if}}</h1>
          </div>

          <nav class="hidden md:flex space-x-8 text-xl">
            {{#if about.value.about.content}}
            {{#unless about.meta.hide}}
            <a href="#about" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{about.value.about.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if services.value.services.items}}
            {{#unless services.meta.hide}}
            <a href="#offerings" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{services.value.services.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if success_stories.value.success_stories.items}}
            {{#unless success_stories.meta.hide}}
            <a href="#casestudies" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{success_stories.value.success_stories.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if faq.value.faq.items}}
            {{#unless faq.meta.hide}}
            <a href="#faq" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{faq.value.faq.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if contacts.value.contacts}}
            {{#if
            contacts.value.contacts.contactForm}}
            {{#unless contacts.meta.hide}}
            <a href="#contact" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{contacts.value.contacts.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{/if}}
          </nav>

          <button class="md:hidden p-2" id="mobile-menu-btn">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <div class="md:hidden hidden" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1 border-t flex flex-col"
            style="background-color: {{default colorPalette.value.colorPalette.secondary '#fffcee'}};">
            {{#if about.value.about.content}}
            {{#unless about.meta.hide}}
            <a href="#about" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{about.value.about.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if services.value.services.items}}
            {{#unless services.meta.hide}}
            <a href="#offerings" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{services.value.services.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if success_stories.value.success_stories.items}}
            {{#unless success_stories.meta.hide}}
            <a href="#casestudies" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{success_stories.value.success_stories.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if faq.value.faq.items}}
            {{#unless faq.meta.hide}}
            <a href="#faq" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{faq.value.faq.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{#if contacts.value.contacts}}
            {{#if
            contacts.value.contacts.contactForm}}
            {{#unless contacts.meta.hide}}
            <a href="#contact" class="transition-colors"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{contacts.value.contacts.navbarName}}</a>
            {{/unless}}
            {{/if}}
            {{/if}}
          </div>
        </div>
      </div>
    </header>

    <section class="py-12 lg:py-20 section-wrapper" data-edit-section="personal_info" data-section="personal_info"
      data-title="Personal Info"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <div class="order-2 lg:order-1">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight mb-6"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{personal_info.value.headline}}
            </h1>
            <p class="text-lg lg:text-xl mb-8"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{personal_info.value.position}}
            </p>
            {{#if contacts.value.contacts}}
            {{#unless contacts.meta.hide}}
            {{#if contacts.value.contacts.bookingUrl}}
            <a href="{{contacts.value.contacts.bookingUrl}}" target="_blank"
              class="inline-block px-8 py-3 rounded-lg text-lg font-medium hover:bg-primary/90 transition-colors"
              style="color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}}; background-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{#if contacts.value.contacts.buttonText}}
              {{contacts.value.contacts.buttonText}} {{else}} Schedule a
              Consultation {{/if}}
            </a>
            {{else}}
            <a href="#contact" class="inline-block px-8 py-3 rounded-lg text-lg font-medium transition-colors"
              style="color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}}; background-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{#if contacts.value.contacts.buttonText}}
              {{contacts.value.contacts.buttonText}} {{else}} Schedule a
              Consultation {{/if}}
            </a>
            {{/if}}
            {{/unless}}
            {{/if}}
          </div>
          {{#if personal_info.value.profilePicureUrl}}
          <div class="order-1 lg:order-2">
            <img src="{{personal_info.value.profilePicureUrl}}" alt="Consultant working on a business strategy"
              class="w-full h-80 sm:h-96 lg:h-[500px] xl:h-[600px] object-cover rounded-lg shadow-lg">
          </div>
          {{/if}}
        </div>
      </div>
    </section>

    {{#if about.value.about.content}}
    {{#unless about.meta.hide}}
    <section id="about" class="py-12 lg:py-20 section-wrapper" data-aos="fade-up" data-edit-section="about"
      data-section="about" data-title="About"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <div>
            <img
              src="{{#if about.value.about.image}} {{about.value.about.image}} {{else}} https://c.animaapp.com/mfnpsvda9pPWxp/assets/88aac0_70dba72adce54eea9f53068b36a9e0e9~mv2.jpeg {{/if}}"
              alt="{{personal_info.value.firstName}}"
              class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-lg shadow-lg">
          </div>
          <div>
            {{#if about.value.about.heading}}
            <h2 class="text-3xl lg:text-4xl font-bold mb-4"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{about.value.about.heading}}
            </h2>
            {{/if}}
            {{#if about.value.about.subheading}}
            <p class="text-lg lg:text-xl mb-6"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{about.value.about.subheading}}
            </p>
            {{/if}}
            <p class="text-base  leading-relaxed"
              style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{about.value.about.content}}
            </p>
          </div>
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if services.value.services.items}}
    {{#unless services.meta.hide}}
    <section id="offerings" class="py-12 lg:py-20 section-wrapper" data-edit-section="services" data-section="services"
      data-title="Services" data-aos="fade-up"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12"
          style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
          {{services.value.services.section_title}}
        </h2>

        <div class="space-y-8">
          {{#each services.value.services.items}}
          <div class="rounded-lg p-6 lg:p-8"
            style="background-color: {{default ../colorPalette.value.colorPalette.secondary '#fffcee'}};">
            <h3 class="text-2xl lg:text-3xl font-bold mb-2"
              style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
              {{this.title}}
            </h3>
            <p class="text-lg lg:text-xl mb-4"
              style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">{{this.subtitle}}</p>
            <p class="text-base leading-relaxed"
              style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
              {{this.description}}
            </p>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if success_stories.value.success_stories.items}}
    {{#unless success_stories.meta.hide}}
    <section id="casestudies" class="py-12 lg:py-20 section-wrapper" data-edit-section="success_stories"
      data-section="success_stories" data-title="Success Stories"
      style="background-color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12 lg:mb-16"
          style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
          {{success_stories.value.success_stories.section_title}}
        </h2>

        <div class="space-y-16 lg:space-y-20">
          {{#each success_stories.value.success_stories.items}}
          <div class="flex flex-col md:flex-row items-center gap-8 lg:gap-12 even:md:flex-row-reverse">

            {{#if this.image}}
            <div class="w-full md:w-1/2">
              <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-80 object-cover rounded-lg shadow-lg">
            </div>
            {{/if}}

            <div class="w-full md:w-1/2">
              <p class="text-sm font-bold tracking-wider"
                style="color: {{default ../colorPalette.value.colorPalette.primary-dim 'rgba(120, 53, 15, 0.7)'}};">
                {{this.client}}</p>
              <h3 class="text-2xl lg:text-3xl font-bold mt-2 mb-4"
                style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
                {{this.title}}
              </h3>
              <p class="text-base leading-relaxed mb-4"
                style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
                {{this.description}}
              </p>
              <div class="flex space-x-8">
                {{#each this.stats}}
                <div>
                  <p class="text-2xl font-bold"
                    style="color: {{default ../../colorPalette.value.colorPalette.primary '#78350f'}};">
                    {{this.number}}</p>
                  <p class="text-sm"
                    style="color: {{default ../../colorPalette.value.colorPalette.primary '#78350f'}};">
                    {{this.label}}</p>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if testimonials.value.testimonials.items}}
    {{#unless testimonials.meta.hide}}
    <section class="py-12 lg:py-20 section-wrapper" data-aos="fade-up" data-edit-section="testimonials"
      data-section="testimonials" data-title="Testimonials"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12"
          style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
          {{testimonials.value.testimonials.section_title}}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {{#each testimonials.value.testimonials.items}}
          <div class="rounded-lg p-6"
            style="background-color: {{default ../colorPalette.value.colorPalette.secondary '#fffcee'}};">
            <p class="text-base leading-relaxed mb-6"
              style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
              "{{this.recommendationText}}"
            </p>
            <p class="text-lg font-medium"
              style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
              {{this.recommenderName}}{{#if
              this.designation}},
              {{this.designation}}{{/if}}</p>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if client_logos.value.client_logos.items}}
    {{#unless client_logos.meta.hide}}
    <section id="trustedby" class="py-12 lg:py-20 section-wrapper" data-edit-section="client_logos"
      data-section="client_logos" data-title="Client Logos" data-aos="fade-up"
      style="background-color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold mb-12 text-center"
          style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
          {{client_logos.value.client_logos.section_title}}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8 items-center">
          {{#each client_logos.value.client_logos.items}}
          <div class="flex justify-center p-4">
            <img src="{{this.url}}" alt="{{this.name}}"
              class="max-h-12 w-auto object-contain transition-all duration-300 ease-in-out filter grayscale hover:grayscale-0 opacity-60 hover:opacity-100">
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if faq.value.faq.items}}
    {{#unless faq.meta.hide}}
    <section id="faq" class="py-12 lg:py-20 section-wrapper" data-aos="fade-up" data-edit-section="faq"
      data-section="faq" data-title="FAQ"
      style="background-color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12"
          style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
          {{faq.value.faq.section_title}}
        </h2>
        <div class="max-w-4xl mx-auto">
          {{#each faq.value.faq.items}}
          <div class="faq-item border-b py-4"
            style="border-color: {{default ../colorPalette.value.colorPalette.border-primary-dim 'rgba(120, 53, 15, 0.2)'}};">
            <button class="faq-question w-full flex justify-between items-center text-left focus:outline-none">
              <h3 class="text-xl lg:text-2xl font-bold"
                style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">{{this.question}}</h3>
              <span class="faq-icon text-3xl font-light transform transition-transform duration-300"
                style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">&plus;</span>
            </button>
            <div class="faq-answer max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
              <p class="text-base leading-relaxed pt-4"
                style="color: {{default ../colorPalette.value.colorPalette.primary '#78350f'}};">
                {{this.answer}}
              </p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}

    {{#if contacts.value.contacts}}
    {{#if contacts.value.contacts.contactForm}}
    {{#unless contacts.meta.hide}}
    <section id="contact" class="py-12 lg:py-20 section-wrapper" data-edit-section="contacts" data-section="contacts"
      data-title="Contacts" data-aos="fade-up"
      style="background-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="rounded-lg p-6 lg:p-8"
          style="background-color: {{default colorPalette.value.colorPalette.secondary '#fffcee'}};">
          <h2 class="text-2xl lg:text-3xl font-bold mb-4 text-center"
            style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
            {{contacts.value.contacts.heading}}
          </h2>
          {{#if contacts.value.contacts.description}}
          <p class="text-center mb-8" style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
            {{contacts.value.contacts.description}}</p>
          {{/if}}
          <form class="space-y-6" action="/api/contact" method="post" enctype="text/plain">
            <div>
              <label for="name" class="block text-sm font-medium mb-2"
                style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">Name
                *</label>
              <input type="text" id="name" name="name" required
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{default colorPalette.value.colorPalette.border-primary-dim 'rgba(120, 53, 15, 0.2)'}}]"
                style="border-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2"
                style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">Email
                *</label>
              <input type="email" id="email" name="email" required
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{default colorPalette.value.colorPalette.border-primary-dim 'rgba(120, 53, 15, 0.2)'}}]"
                style="border-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
            </div>
            <div>
              <label for="message" class="block text-sm font-medium mb-2"
                style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{default
                contacts.value.contacts.messageInputLabel
                "Send Message"}}</label>
              <textarea id="message" name="message" rows="4"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{colorPalette.value.colorPalette.border-primary-dim}}]"
                style="border-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};"></textarea>
            </div>
            <button type="submit"
              class="w-full bg-transparent border-2 px-6 py-3 rounded-lg text-lg font-medium hover:bg-primary hover:text-white transition-colors"
              style="border-color: {{default colorPalette.value.colorPalette.primary '#78350f'}}; color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
              {{default contacts.value.contacts.contactFormButtonText
              'Send Message'}}
            </button>
          </form>
        </div>
      </div>
    </section>
    {{/unless}}
    {{/if}}
    {{/if}}

    <footer class="py-12" style="background-color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-8 md:space-y-0">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 rounded-full flex items-center justify-center"
              style="background-color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}};">
              <span class="font-bold text-lg"
                style="color: {{default colorPalette.value.colorPalette.primary '#78350f'}};">{{firstChar
                personal_info.value.firstName}}</span>
            </div>
            <h3 class="text-2xl font-bold"
              style="color: {{default colorPalette.value.colorPalette.quaternary '#ffffff'}};">
              {{personal_info.value.firstName}}

              {{#if personal_info.value.role}} | {{personal_info.value.role}}
              {{/if}}</h3>
          </div>
          {{#if social.value.social.items}}
          {{#unless social.meta.hide}}
          <div class="flex space-x-6 section-wrapper" data-edit-section="social" data-section="social"
            data-title="Social Links">
            {{#each social.value.social.items}}
            <a href="{{this.url}}" class="hover:text-accent transition-colors"
              style="color: {{default ../colorPalette.value.colorPalette.quaternary '#ffffff'}};">
              {{{socialIcon url=this.url
              label=this.label size=40 className="size-12" }}}
            </a>
            {{/each}}
          </div>
          {{/unless}}
          {{/if}}
        </div>
        <div class="mt-8 pt-8 border-t text-center"
          style="border-color: {{default colorPalette.value.colorPalette.border-quatenary-dim 'rgba(255, 255, 255, 0.2)'}};">
          <p class="text-sm" style="color: {{default colorPalette.value.colorPalette.tertiary-bright '#e5e7eb'}};">
            © {{currentYear}} {{personal_info.value.firstName}}. All Rights
            Reserved.
          </p>
        </div>
      </div>
    </footer>
  </div>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
          // Close mobile menu if open
          if (!mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
          }
        }
      });
    });

    // FAQ Accordion
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question.addEventListener('click', () => {
        const isExpanded = answer.style.maxHeight && answer.style.maxHeight !== '0px';

        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.querySelector('.faq-answer').style.maxHeight = null;
            otherItem.querySelector('.faq-icon').classList.remove('rotate-45');
          }
        });

        // Toggle the clicked item
        if (isExpanded) {
          answer.style.maxHeight = null;
          icon.classList.remove('rotate-45');
        } else {
          answer.style.maxHeight = answer.scrollHeight + 'px';
          icon.classList.add('rotate-45');
        }
      });
    });
  </script>
