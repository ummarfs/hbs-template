<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>M. Caldwell - Business Growth Consultant</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Questrial:wght@400&display=swap"
      rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
  body, .font-questrial {
    font-family: 'Questrial', sans-serif;
  }
</style>
  </head>
  <body>
    <div class="font-questrial"
      style="background-color: {{color_palette.value.colorPalette.tertiary}};">
      <header class="sticky top-0 z-50 shadow-sm py-2"
        style="background-color: {{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16 lg:h-20">
            <div class="flex items-center space-x-3">
              <div
                class="w-8 h-8 rounded-full flex items-center justify-center"
                style="background-color: {{color_palette.value.colorPalette.primary }};">
                <span class="font-bold text-sm"
                  style="color: {{color_palette.value.colorPalette.quaternary}};">{{firstChar
                  personal_info.value.firstName}}</span>
              </div>
              <h1
                class="text-xl lg:text-2xl font-bold"
                style="color: {{color_palette.value.colorPalette.primary}};">{{personal_info.value.firstName}}
                |
                {{#if personal_info.value.role}} {{personal_info.value.role}}
                {{/if}}</h1>
            </div>

            <nav class="hidden md:flex space-x-8 text-xl">
              <a href="#about"
                class="transition-colors"
                style="color: {{color_palette.value.colorPalette.primary}};">About</a>
              <a href="#offerings"
                class="transition-colors"
                style="color: {{color_palette.value.colorPalette.primary}};">Offerings</a>
              <a href="#casestudies"
                class="transition-colors"
                style="color: {{color_palette.value.colorPalette.primary}};">Case
                Studies</a>
              <a href="#faq"
                class="transition-colors"
                style="color: {{color_palette.value.colorPalette.primary}};">FAQ</a>
              <a href="#contact"
                class="transition-colors"
                style="color: {{color_palette.value.colorPalette.primary}};">Work
                With Me</a>
            </nav>

            <button class="md:hidden p-2" id="mobile-menu-btn">
              <svg class="w-6 h-6" fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                style="color: {{color_palette.value.colorPalette.primary}};">
                <path stroke-linecap="round" stroke-linejoin="round"
                  stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>

          <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 border-t"
              style="background-color: {{color_palette.value.colorPalette.secondary}};">
              <a href="#about"
                class="block px-3 py-2 hover:bg-gray-300 rounded-md"
                style="color: {{color_palette.value.colorPalette.primary}};">About</a>
              <a href="#offerings"
                class="block px-3 py-2 rounded-md"
                style="color: {{color_palette.value.colorPalette.primary}};">Offerings</a>
              <a href="#casestudies"
                class="block px-3 py-2 rounded-md"
                style="color: {{color_palette.value.colorPalette.primary}};">Case
                Studies</a>
              <a href="#faq"
                class="block px-3 py-2 rounded-md"
                style="color: {{color_palette.value.colorPalette.primary}};">FAQ</a>
              <a href="#contact"
                class="block px-3 py-2 rounded-md"
                style="color: {{color_palette.value.colorPalette.primary}};">Work
                With Me</a>
            </div>
          </div>
        </div>
      </header>

      <section class="py-12 lg:py-20"
        style="background-color:{{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <div class="order-2 lg:order-1">
              <h1
                class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight mb-6"
                style="color: {{color_palette.value.colorPalette.primary}};">
                {{personal_info.value.headline}}
              </h1>
              <p class="text-lg lg:text-xl mb-8"
                style="color: {{color_palette.value.colorPalette.primary}};">
                {{personal_info.value.position}}
              </p>
              {{#if contacts.value.contacts}}
              {{#unless contacts.meta.hide}}
              {{#if contacts.value.contacts.booking.enabled}}
              <a href="{{contacts.value.contacts.booking.url}}"
                target="_blank"
                class="inline-block px-8 py-3 rounded-lg text-lg font-medium hover:bg-primary/90 transition-colors"
                style="color: {{color_palette.value.colorPalette.quaternary}};background-color: {{color_palette.value.colorPalette.primary}};">
                {{contacts.value.contacts.booking.buttonText}}
              </a>
              {{else}}
              <a href="#contact"
                class="inline-block px-8 py-3 rounded-lg text-lg font-medium transition-colors"
                style="color: {{color_palette.value.colorPalette.quaternary}};background-color: {{color_palette.value.colorPalette.primary}};">
                {{contacts.value.contacts.buttonText}}
              </a>
              {{/if}}
              {{/unless}}
              {{/if}}
            </div>
            <div class="order-1 lg:order-2">
              <img
                src="{{personal_info.value.profilePicureUrl}}"
                alt="Consultant working on a business strategy"
                class="w-full h-80 sm:h-96 lg:h-[500px] xl:h-[600px] object-cover rounded-lg shadow-lg">
            </div>
          </div>
        </div>
      </section>

      {{#if about.value.about.content}}
      {{#unless about.meta.hide}}
      <section id="about" class="py-12 lg:py-20" data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <div>
              <img
                src="{{about.value.about.image}}"
                alt="{{personal_info.value.firstName}}"
                class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-lg shadow-lg">
            </div>
            <div>
              {{#if about.value.about.heading}}
              <h2 class="text-3xl lg:text-4xl font-bold mb-4"
                style="color: {{color_palette.value.colorPalette.primary}};">
                {{about.value.about.heading}}
              </h2>
              {{/if}}
              {{#if about.value.about.subheading}}
              <p class="text-lg lg:text-xl mb-6"
                style="color: {{color_palette.value.colorPalette.primary}};">
                {{about.value.about.subheading}}
              </p>
              {{/if}}
              <!-- About Content -->
              <p class="text-base  leading-relaxed"
                style="color: {{color_palette.value.colorPalette.primary}};">
                {{about.value.about.content}}
              </p>
            </div>
          </div>
        </div>
      </section>
      {{/unless}}
      {{/if}}

      {{#if services.value.services.items}}
      {{#unless services.meta.hide}}
      <section id="offerings" class="py-12 lg:py-20"
        data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2
            class="text-3xl lg:text-4xl font-bold text-center mb-12"
            style="color: {{color_palette.value.colorPalette.primary}};">
            {{services.value.services.section_title}}
          </h2>

          <div class="space-y-8">
            {{#each services.value.services.items}}
            <div class="rounded-lg p-6 lg:p-8"
              style="background-color: {{../color_palette.value.colorPalette.secondary}};">
              <h3 class="text-2xl lg:text-3xl font-bold mb-2"
                style="color: {{../color_palette.value.colorPalette.primary}};">
                {{this.title}}
              </h3>
              <p class="text-lg lg:text-xl mb-4"
                style="color: {{../color_palette.value.colorPalette.primary}};">{{this.subtitle}}</p>
              <p class="text-base leading-relaxed"
                style="color: {{../color_palette.value.colorPalette.primary}};">
                {{this.description}}
              </p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
      {{/unless}}
      {{/if}}

      {{#if success_stories.value.success_stories.items}}
      {{#unless success_stories.meta.hide}}
      <section id="casestudies" class="py-12 lg:py-20"
        data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.quaternary}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2
            class="text-3xl lg:text-4xl font-bold text-center mb-12"
            style="color: {{color_palette.value.colorPalette.primary}};">
            {{success_stories.value.success_stories.section_title}}
          </h2>

          <div
            class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 items-center">
            {{#each success_stories.value.success_stories.items}}
            <div class="order-2 md:order-1">
              <p
                class="text-sm font-bold tracking-wider"
                style="color: {{../color_palette.value.colorPalette.primary-dim}};">{{this.client}}</p>
              <h3 class="text-2xl lg:text-3xl font-bold mt-2 mb-4"
                style="color: {{../color_palette.value.colorPalette.primary}};">
                {{this.title}}
              </h3>
              <p class="text-base leading-relaxed mb-4"
                style="color: {{../color_palette.value.colorPalette.primary}};">
                {{this.description}}
              </p>
              <div class="flex space-x-8">
                {{#each this.stats}}
                <div>
                  <p class="text-2xl font-bold"
                    style="color: {{../../color_palette.value.colorPalette.primary}};">{{this.number}}</p>
                  <p class="text-sm"
                    style="color: {{../../color_palette.value.colorPalette.primary}};">{{this.label}}</p>
                </div>
                {{/each}}
              </div>
            </div>
            <div class="order-1 md:order-2">
              <img
                src="{{this.image}}"
                alt="Ecommerce business success"
                class="w-full h-80 object-cover rounded-lg shadow-lg">
            </div>
            {{/each}}
          </div>
        </div>
      </section>
      {{/unless}}
      {{/if}}

      {{#if testimonials.value.testimonials.items}}
      {{#unless testimonials.meta.hide}}
      <section class="py-12 lg:py-20" data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2
            class="text-3xl lg:text-4xl font-bold text-center mb-12"
            style="color: {{color_palette.value.colorPalette.primary}};">
            {{testimonials.value.testimonials.section_title}}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each testimonials.value.testimonials.items}}
            <div class="rounded-lg p-6"
              style="background-color: {{../color_palette.value.colorPalette.secondary}};">
              <p class="text-base leading-relaxed mb-6"
                style="color: {{../color_palette.value.colorPalette.primary}};">
                "{{this.recommendationText}}"
              </p>
              <p class="text-lg font-medium"
                style="color: {{../color_palette.value.colorPalette.primary}};">{{this.recommenderName}}{{#if this.recommenderDesignation}},
                {{this.recommenderDesignation}}{{/if}}</p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
      {{/unless}}
      {{/if}}

      <section id="trustedby" class="py-12 lg:py-20"
        data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.tertiary-bright}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2
            class="text-3xl lg:text-4xl font-bold text-primary mb-12"
            style="color: {{color_palette.value.colorPalette.primary}};">
            Trusted By Leading Businesses
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <div class="p-6 flex items-center justify-center h-24"><span
                class="text-2xl font-bold"
                style="color: {{color_palette.value.colorPalette.primary-dim}};">STARTUP
                INC.</span></div>
          </div>
        </div>
      </section>

      <section id="faq" class="py-12 lg:py-20" data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.quaternary}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2
            class="text-3xl lg:text-4xl font-bold text-center mb-12"
            style="color: {{color_palette.value.colorPalette.primary}};">
            Frequently Asked Questions
          </h2>
          <div class="max-w-4xl mx-auto">
            <div class="faq-item border-b py-4"
              style="border-color: {{color_palette.value.colorPalette.border-primary-dim}};">
              <button
                class="faq-question w-full flex justify-between items-center text-left focus:outline-none">
                <h3 class="text-xl lg:text-2xl font-bold"
                  style="color: {{color_palette.value.colorPalette.primary}};">Who
                  is
                  your
                  ideal client?</h3>
                <span
                  class="faq-icon text-3xl font-light transform transition-transform duration-300"
                  style="color: {{color_palette.value.colorPalette.primary}};">&plus;</span>
              </button>
              <div
                class="faq-answer max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
                <p class="text-base leading-relaxed pt-4"
                  style="color: {{color_palette.value.colorPalette.primary}};">
                  I primarily work with established small to medium-sized
                  businesses (typically $1M - $10M in annual revenue) that are
                  poised for growth but lack the internal strategic clarity to
                  get
                  to the next level. My ideal clients are ambitious founders and
                  leaders who are open to new ideas and ready to take decisive
                  action.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="contact" class="py-12 lg:py-20"
        data-aos="fade-up"
        style="background-color: {{color_palette.value.colorPalette.primary}};">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="rounded-lg p-6 lg:p-8"
            style="background-color: {{color_palette.value.colorPalette.secondary}};">
            <h2
              class="text-2xl lg:text-3xl font-bold mb-4 text-center"
              style="color: {{color_palette.value.colorPalette.primary}};">
              Ready to Scale Your Business?
            </h2>
            <p class="text-center mb-8"
              style="color: {{color_palette.value.colorPalette.primary}};">Fill
              out the form below for
              a
              complimentary discovery call to see if we're a good fit.</p>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName"
                    class="block text-sm font-medium mb-2"
                    style="color: {{color_palette.value.colorPalette.primary}};">First
                    name
                    *</label>
                  <input type="text" id="firstName" name="firstName" required
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{color_palette.value.colorPalette.border-primary-dim}}]"
                    style="border-color: {{color_palette.value.colorPalette.primary}};">
                </div>
                <div>
                  <label for="lastName"
                    class="block text-sm font-medium mb-2"
                    style="color: {{color_palette.value.colorPalette.primary}};">Last
                    name
                    *</label>
                  <input type="text" id="lastName" name="lastName" required
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{color_palette.value.colorPalette.border-primary-dim}}]"
                    style="border-color: {{color_palette.value.colorPalette.primary}};">
                </div>
              </div>
              <div>
                <label for="email"
                  class="block text-sm font-medium mb-2"
                  style="color: {{color_palette.value.colorPalette.primary}};">Email
                  *</label>
                <input type="email" id="email" name="email" required
                  class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{color_palette.value.colorPalette.border-primary-dim}}]"
                  style="border-color: {{color_palette.value.colorPalette.primary}};">
              </div>
              <div>
                <label for="message"
                  class="block text-sm font-medium mb-2"
                  style="color: {{color_palette.value.colorPalette.primary}};">What's
                  your
                  biggest business challenge right now?</label>
                <textarea id="message" name="message" rows="4"
                  class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[{{color_palette.value.colorPalette.border-primary-dim}}]"
                  style="border-color: {{color_palette.value.colorPalette.primary}};"></textarea>
              </div>
              <button type="submit"
                class="w-full bg-transparent border-2 px-6 py-3 rounded-lg text-lg font-medium hover:bg-primary hover:text-white transition-colors"
                style="border-color: {{color_palette.value.colorPalette.primary}};color: {{color_palette.value.colorPalette.primary}};">
                Request a Discovery Call
              </button>
            </form>
          </div>
        </div>
      </section>

      <footer class="py-12"
        style="background-color: {{color_palette.value.colorPalette.primary}};">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div
            class="flex flex-col md:flex-row justify-between items-center space-y-8 md:space-y-0">
            <div class="flex items-center space-x-3">
              <div
                class="w-12 h-12 rounded-full flex items-center justify-center"
                style="background-color: {{color_palette.value.colorPalette.quaternary}};">
                <span class="font-bold text-lg"
                  style="color: {{color_palette.value.colorPalette.primary}};">M</span>
              </div>
              <h3 class="text-2xl font-bold"
                style="color: {{color_palette.value.colorPalette.quaternary}};">M.
                Caldwell | Growth
                Consultant</h3>
            </div>
            <div class="flex space-x-6">
              <a href="#"
                class="hover:text-accent transition-colors"
                style="color: {{color_palette.value.colorPalette.quaternary}};">
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"
                  aria-hidden="true">
                  <path fill-rule="evenodd"
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    clip-rule="evenodd" />
                </svg>
                <span class="sr-only">LinkedIn</span>
              </a>
            </div>
          </div>
          <div class="mt-8 pt-8 border-t text-center"
            style="border-color: {{color_palette.value.colorPalette.border-quatenary-dim}};">
            <p class="text-sm"
              style="color: {{color_palette.value.colorPalette.tertiary-bright}};">
              © 2025 M. Caldwell Consulting. All Rights Reserved.
            </p>
          </div>
        </div>
      </footer>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
          // Close mobile menu if open
          if (!mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
          }
        }
      });
    });

     // FAQ Accordion
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question.addEventListener('click', () => {
        const isExpanded = answer.style.maxHeight && answer.style.maxHeight !== '0px';

        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.querySelector('.faq-answer').style.maxHeight = null;
            otherItem.querySelector('.faq-icon').classList.remove('rotate-45');
          }
        });
        
        // Toggle the clicked item
        if (isExpanded) {
          answer.style.maxHeight = null;
          icon.classList.remove('rotate-45');
        } else {
          answer.style.maxHeight = answer.scrollHeight + 'px';
          icon.classList.add('rotate-45');
        }
      });
    });
  </script>
  </body>
</html>